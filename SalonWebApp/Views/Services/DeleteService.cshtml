@model Salon.DataContext.PriceList

@{
    ViewData["Title"] = "Удалить услугу";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить услугу?</h3>
<div>
    <h4>---администрирование данных---</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-10">
            Идентификатор:   @Model.ServiceId
        </dt>
        <dt class="col-sm-10">
            Название:  @Model.Service
        </dt>
        <dt class="col-sm-10">
            Цена:   @Model.Price
        </dt>
    </dl>
    <hr />
    <form asp-controller="Services" asp-action="DeleteConfirmed">
        <input type="hidden" name="id" value="@Model.ServiceId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-controller="Home" asp-action="OurPricelist">Назад</a>
    </form>
</div>
